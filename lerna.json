{
  "version": "1.0.0",
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "*.txt",
        "test/**",
        "example/**",
        "package.json"
      ]
    },
    "bootstrap": {
      "npmClient": "cnpm"
    }
  },
  "npmClientArgs": ["--no-package-lock"]
}
